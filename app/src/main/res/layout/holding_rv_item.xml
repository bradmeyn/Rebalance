<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    android:layout_margin="2dp"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/holdingCard">

        <RelativeLayout
            android:id="@+id/rowOne"
            android:layout_width="match_parent"
            android:layout_height="34dp">

            <TextView
                android:id="@+id/holdingCode"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:layout_toStartOf="@id/rowOne"
                android:layout_toLeftOf="@id/holdingPrice"
                android:padding="3dp"
                android:text="Investment Code"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:ignore="NotSibling" />

            <TextView

                android:id="@+id/holdingPrice"
                android:layout_width="50dp"
                android:layout_height="32dp"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="82dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@id/holdingCode"
                android:padding="3dp"
                android:text="$100"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/holdingValue"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:padding="3dp"
                android:text="$"
                android:textSize="18dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rowTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rowOne">

            <TextView
                android:id="@+id/holdingUnits"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:padding="3dp"
                android:text="100"
                android:textSize="16dp"
                 />

            <TextView
                android:id="@+id/holdingWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@id/holdingUnits"
                android:padding="3dp"
                android:text="%"
                android:textAlignment="textEnd"
                android:textSize="18dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>