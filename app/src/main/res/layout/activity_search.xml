<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/searchScreen"
    tools:context=".SearchActivity">
    
    <RelativeLayout
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@+id/searchBtn" />
        <Button
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Search"
            android:id="@+id/searchBtn"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/investmentContainer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/searchContainer"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:layout_constraintTop_toBottomOf="@id/searchContainer">

        <RelativeLayout
            android:id="@+id/investmentCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/investmentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"


                android:padding="3dp"
                android:text="Investment Name"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/investmentCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/investmentName"
                android:layout_margin="2dp"
                android:padding="3dp"
                android:text="CODE"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/investmentPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/investmentCode"
                android:layout_margin="2dp"
                android:padding="3dp"
                android:text="$100"
                android:textSize="20dp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:text="Select"
        android:id="@+id/selectBtn"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/fragmentFrame"
        android:name="com.example.rebalance.SearchFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>